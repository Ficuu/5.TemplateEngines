html 
    head 
        title=title
        link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3", crossorigin="anonymous")
    body
    div(class='container fluid') 
        h2=message
        img(src="https://miro.medium.com/max/547/1*XUK4XE1-j9ju7qWVzcIsYg.png", alt="pug", width="15%")
        div(class='row')
            div(class='col-sm-12 col-xl-6 col-xxl-6 col-lg-6')
                form(action="products", method="POST")
                    label='Producto' 
                    input(type="text", name="product", class='form-control w-75')
                    label='Precio' 
                    input(type="text", name="price", class='form-control w-75 mt-2')
                    label='URL de imágen'
                    input(type="text", name="img", class='form-control w-75 mt-2')

                    input(type="submit", class="btn btn-success mt-2 ", value="SEND!") 
            div(class='col-sm-12 col-xl-6 col-xxl-6 col-lg-6')
                        if data.length === 0
                            h3(class="text-center")='No hay items cargados'
                            h6(class="text-center")='Por favor ingresar'
                        else 
                            h4='Detalle de productos'
                                table(class='table mt-2')
                                    thead
                                        tr  
                                            th='#'
                                            th='Nombre'
                                            th='Precio'
                                            th='Imágen'
                                        tbody 
                                            each val, index in data
                                                tr 
                                                    th=index + 1
                                                    td=val.product
                                                    td=val.price
                                                    td
                                                        img(src=val.img, alt="img" width="25px")
     
        